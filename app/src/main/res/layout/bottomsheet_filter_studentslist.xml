<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutStudentList"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:paddingHorizontal="16dp"
    android:alpha="1.0">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pacificoregular"
            android:text="Filter"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingLeft="30dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/round_clear_24"
            android:id="@+id/cancelButton"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:textSize="14dp"
        android:fontFamily="@font/quicksandmedium"
        android:background="@drawable/background_btn_1"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:textSize="14dp"
        android:fontFamily="@font/quicksandmedium"
        android:background="@drawable/background_btn_1"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:textSize="14dp"
        android:fontFamily="@font/quicksandmedium"
        android:background="@drawable/background_btn_1"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School Year"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:textSize="14dp"
        android:fontFamily="@font/quicksandmedium"
        android:background="@drawable/background_btn_1"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:fontFamily="@font/agbalumoregular"
        android:textSize="16dp"
        app:backgroundTint="#4E74F9"
        app:cornerRadius="10dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>