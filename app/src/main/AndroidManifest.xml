<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentManagement"
        tools:targetApi="31">
        <activity
            android:name=".Activity.LoginHistoryMyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.EditMyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.AddAccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ViewLoginHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.EditDetailedAccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ListAccountsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.EditDetailedStudentActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.AddStudentActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.DetailedStudentActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.DetailedAccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ListStudentsActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.PreLoginActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>